#include<iostream>
using namespace std;

int main(){
    int n;
    cout<<"Enter any number: ";
    cin>>n;
    
    int no_of_divisor = 0;
    
    if(n<=1){
        cout<<"Number is not prime"<<endl;
    }
    else{
        for(int i = 1;i<=n;i++){
           if(n%i==0){
               no_of_divisor ++;
           }
        }
           if(no_of_divisor > 2){
               cout<<"Entered number is not a Prime Number."<<endl;
           }
           else{
               cout<<"Number is a Prime Number."<<endl;
           }
        }

        return 0;
}
